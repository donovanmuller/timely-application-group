# Based on: http://editorconfig.org/#example-file

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*]
charset = utf-8

# 4 space indentation
[*.{java,xml,xsd}]
indent_style = tab
indent_size = 4

# 2 space indentation
[*.{js,css,html}]
indent_style = tab
indent_size = 2
